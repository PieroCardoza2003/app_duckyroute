<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/style_bottom_sheet"
    android:backgroundTint="@color/white"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="35dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/quiere_actualizar_su_n_mero_telef_nico"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <Spinner
            android:id="@+id/spinnerCountryCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:background="@drawable/border_radius"
            android:padding="13dp"
            tools:ignore="TouchTargetSizeCheck" />

        <EditText
            android:maxLength="20"
            android:id="@+id/edittext_telefono_bottom"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/border_radius"
            android:hint="@string/tel_fono"
            android:inputType="number"
            android:padding="13dp"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:autofillHints="" />

    </LinearLayout>


    <Button
        android:id="@+id/button_guardar_bottomdialog"
        android:padding="13dp"
        android:textColor="@color/black"
        android:backgroundTint="@color/colorDuckyHigh"
        android:text="@string/guardar"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>

