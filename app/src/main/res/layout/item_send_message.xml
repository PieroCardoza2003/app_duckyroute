    android:layout_marginTop="5dp"
    android:id="@+id/item_send_chat"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="20dp"
    app:cardElevation="0dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textview_name_sendmessage_chat"
            android:gravity="center"
            android:background="@drawable/border_radius"
            android:backgroundTint="@color/colorDuckyHigh"
            android:textSize="20sp"
            android:text="P"
            android:textColor="@color/black"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:padding="5dp"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:id="@+id/textview_sendmessage_chat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cuantos puntos de entrega quedan disponibles para entrgar el dia de hoy y maÃ±ana" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>